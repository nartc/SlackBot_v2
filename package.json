{
  "name": "nest-graphql",
  "version": "1.0.0",
  "description": "nest-js-graph-ql-sample",
  "author": "nartc",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --names \"HMR,NEST\" -c \"bgBlue.bold,bgRed.bold\" --kill-others-on-fail \"npm run webpack\" \"npm run start\"",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "5.0.0",
    "@nestjs/core": "5.0.0",
    "@nestjs/graphql": "3.0.0",
    "@nestjs/microservices": "5.0.0",
    "@nestjs/mongoose": "4.0.0",
    "@nestjs/passport": "1.0.10",
    "@nestjs/testing": "5.0.0",
    "@nestjs/websockets": "5.0.0",
    "apollo-server-express": "1.3.6",
    "bcryptjs": "2.4.3",
    "dotenv": "5.0.1",
    "fastify-formbody": "2.0.0",
    "graphql": "0.13.2",
    "graphql-tools": "3.0.1",
    "jsonwebtoken": "8.2.1",
    "mongoose": "5.1.1",
    "nest-router": "1.0.5",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.1.0",
    "typescript": "2.8.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "@types/dotenv": "4.0.3",
    "@types/express": "4.11.1",
    "@types/jest": "22.2.3",
    "@types/jsonwebtoken": "7.2.7",
    "@types/mongoose": "5.0.14",
    "@types/node": "10.0.10",
    "@types/passport": "0.4.5",
    "@types/passport-jwt": "3.0.1",
    "@types/supertest": "2.0.4",
    "concurrently": "3.5.1",
    "jest": "22.4.3",
    "nodemon": "1.17.4",
    "prettier": "1.12.1",
    "supertest": "3.1.0",
    "ts-jest": "22.4.6",
    "ts-loader": "4.3.0",
    "ts-node": "6.0.3",
    "tsconfig-paths": "3.3.2",
    "tslint": "5.10.0",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-node-externals": "1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
